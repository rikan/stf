.stf-device-list
  .row.stf-stats-container.unselectable
    .col-md-12
      device-list-stats(tracker='tracker')

div.huya-div
  //div.panel-title 筛选条件
  dl.options(ng-repeat="filter in defaultfilters")
    dt.title {{filter.title}}
    dd.huya
      //a.more.huya-close(href='javascript:;' ng-click='more($event,filter.title)' ) 更多
      div.filter-options
        span.options-item(ng-repeat="value in filter.values" ng-class="{current: value === filterMap[filter.name]}")
          input(type="radio"  name="{{filter.name}}" id="{{value}}"+"_"+"{{filter.title}}" ng-checked="(value === '全部')" value="{{value}}" ng-click='applyFilter(filter.name, value)' )
          label(for="{{value}}"+"_"+"{{filter.title}}") {{value}}
div.huya-div
  device-list-icons(tracker='tracker', columns='columns', sort='sort', filter='filter')
